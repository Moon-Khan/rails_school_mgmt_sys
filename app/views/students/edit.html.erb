<h2> Edit Student <h2>

<%= form_with model: @student, url: students_show_path(@student), method: :patch, local: true do |form| %>
    <p>
        <%= form.label :name %>
        <%= form.text_field :name %>
    </p>
    
    <p> 
        <%= form.label :age %>
        <%= form.number_field :age %>
    </p>

    <p> 
        <%= form.label :email %>
        <%= form.email_field :email %>
    </p>

    <p>
        <%= form.submit 'Edit Student' %>
    </p>

<% end %>

<%= link_to 'Back' , "/students" %>

