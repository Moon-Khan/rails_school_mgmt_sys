<% if @student.errors.any? %>
<div style="color: red; border: 1px solid red; padding: 20px;">
  <h6><%= pluralize(@student.errors.count, "error") %> prevented saving:</h6>
  <ul>
    <% @student.errors.full_messages.each do |msg| %>
      <h6><li><%= msg %></li></h6>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_with model: student do |form| %>
    <h4>
        <%= form.label :name %>
        <%= form.text_field :name %>
    </h4>

    <h4> 
        <%= form.label :age %>
        <%= form.number_field :age %>
    </h4>

    <h4> 
        <%= form.label :email %>
        <%= form.email_field :email %>
    </h4>

    <h4>
        <%= form.submit 'Create Student' %>
    </h4>

<% end %>

